<div class="login">
      <br>
      <br>
      <br>
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <div class="card-block">
        <h3 class='center-align'>Log in</h3>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-field col s12">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="input-field col s12">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", id: 'password', class: 'validate' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="input-field col s12">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="input-field col s12">
            <%= f.submit "Log in", class: 'btn waves-effect waves-light', type: 'submit', name: 'action' %>
          </div>
        <% end %>

        <div class="auth-links log-in-text">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>