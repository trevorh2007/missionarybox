<div class='container'>
    <div class="card blue-grey darken-1">
    	<div class="card-content white-text">
      	<div class="card-block">
<% if @order_items.any? %>
  <% @order_items.each do |item| %>
    <div class="row valign-wrapper">
      <div class="col l3">
        <h5 id='left'>
          <%= item.product.name %>
        </h5>
      </div>

      <div class="col l3">
        <img class="cart-img" src="assets/bluetie.jpg">
      </div>

      <div class="col l3">
        Price: <%= number_to_currency item.product.price %>
      </div>

      <div class="col l3">
        Quantity: <%= item.quantity %> |
        <%= link_to "Remove", order_item_path(item), data: { confirm: "Are you sure?" }, method: :delete %>
      </div>
      
      <div class="col l2">
        Total: <%= number_to_currency (item.product.price * item.quantity) %>
      </div>
    </div>
  <% end %>
  <hr>
  <p class="right-align">Your Total: <%= number_to_currency current_order.total_price %></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
			</div>
		</div>
	</div>
</div>