      </div>

      <div class="input-field col l3">
        <div>
        <%= form_for item do |f| %>
          Quantity: <%= f.text_field :quantity, class: 'quantity-cart' %>
          <%= f.submit "Update", class: 'btn btn-small', type: 'submit', name: 'update' %>
        <% end %>
        </div>
            </p>
        <%= link_to "Remove", order_item_path(item), method: :delete %>
      </div>
      
      <div class="col l2 right-align">
        <%= number_to_currency (item.product.price * item.quantity) %>
      </div>
    </div>
  <% end %>
  <hr>
  <p class="right-align">Cart Total: <%= number_to_currency current_order.calculate_total %></p>
